[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[user]
	name = Greg Wardwell
	email = gwardwell@users.noreply.github.com
[commit]
	template = ~/.config/git/commit-template.txt
[core]
	# Editor for git commit messages (change to "code -w" for VS Code)
	editor = cursor -w
	excludesfile = ~/.gitignore_global
[init]
	# Template directory - .gitignore copied to every new repo
	templateDir = ~/.git-templates
